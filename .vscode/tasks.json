{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build active file",
            "type": "shell",
            "command": "make",
            "args": [
                "build",
                "TARGET=${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "test active file",
            "command": "make",
            "args": [
                "testar_abertos",
                "TARGET=${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "check active file",
            "command": "make",
            "args": [
                "checar_abertos",
                "TARGET=${fileBasenameNoExtension}"
            ],
            "group": "test"
        }
    ]
}